<div class="page-header">
  <h3>Lists</h3>
</div>

<table class='table pages'>
  <thead>
    <tr class='info'>
      <th class='title'>Name</th>
      <th class='actions'>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td>
          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-list-alt')+' List Items', list_list_items_path(list), :class => 'btn btn-xs btn-info' %>
          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-pencil')+' Update', edit_list_path(list), :class => 'btn btn-xs btn-info' %>
          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-remove-sign')+' Delete', list, :class => 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new list', new_list_path, :class => 'btn btn-success' %>