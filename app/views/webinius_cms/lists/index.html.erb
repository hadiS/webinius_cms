<h2>Lists</h2>
<br>

<table class='table table-sm'>
  <thead class="thead-dark">
    <tr class=''>
      <th scope="col-3">Name</th>
      <th scope="col">Associated Page</th>
      <th scope="col" class='text-right'></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.page.send("#{I18n.locale}_title") if list.page.present? %></td>
        <td class='text-right'>
          <%= link_to 'List Items', list_list_items_path(list), :class => 'btn btn-sm btn-info' %>
          <%= link_to 'Update', edit_list_path(list), :class => 'btn btn-sm btn-info' %>
          <%= link_to 'Delete', list, :class => 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Add new list', new_list_path, :class => 'btn btn-success' %>