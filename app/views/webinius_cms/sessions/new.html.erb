<% if flash[:notice] %>
  <div class="col alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="col alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
  
<%= form_tag sessions_path, class: 'form-horizontal' do %>

  <div class="form-group">
    <%= label_tag :username, 'Username', class: "col control-label", for: 'inputUsername' %>
    <div class="col-4">
      <%= text_field_tag :username, '', {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <label class="col control-label" for="inputPassword"><%= label_tag :password %></label>
    <div class="col-4">
      <%= password_field_tag :password, '', {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col">
      <button type="submit" class="btn btn-default">Sign in</button>
    </div>
  </div>

<% end %>





