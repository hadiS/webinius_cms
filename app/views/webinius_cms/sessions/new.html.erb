<% if flash[:notice] %>
	<div class="alert alert-success"> 
		<%= flash[:notice] %>
	</div>
<% end %>

<% if flash[:error] %>
	<div class="alert alert-error"> 
		<%= flash[:error] %>
	</div>
<% end %>

<div class="row login">

	<div class="col-md-6">
		<%= form_tag sessions_path, class: 'form-horizontal well' do %>

			<div class="control-group">
				<div class="controls">
					<h3>Log In</h3>
				</div>
			</div>
			
			<div class="control-group">
				<label class="control-label" for="inputEmail"><%= label_tag :username %></label>
				<div class="controls">
					<%= text_field_tag :username %>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="inputPassword"><%= label_tag :password %></label>
				<div class="controls">
					<%= password_field_tag :password %>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn btn-warning">Log In</button>
				</div>
			</div>

		<% end %>
	</div>

	<div class="col-md-6">
		<h1 class="logo">
			<%= link_to image_tag('logo.jpg'), root_path %>
		</h1>
	</div>

</div>


